{% extends 'base.html.twig' %}
{% block title %}liste des employés{% endblock %}
{% block header_title %} Equipe {% endblock %}
{% block body %}
<div id="content">
<table id="team-container">
   <thead>
      <tr>
         <th>Prénom, Nom</th>
         <th>Statut</th>
         <th>Actions</th>
      </tr>
   </thead>
   <tbody>
      {% for user in user_list %}
      <tr>
         <td>
            <div class="employee-infos">
               <div class="employee-avatar">
               {{ user.name | initials(user.surname) }}
               </div>
               <div class="employee-coords">
                  <strong>{{user.name}}</strong>
                  <span>{{user.email}}</span>
               </div>
            </div>
         </td>
         <td>{{user.status}}</td>
         <td>
            <a class="button button-edit-team" href="user/{{user.id}}/edit">
            Éditer
            </a>
            <a class="delete-team" href="user/{{user.id}}/remove">
            Supprimer
            </a>
         </td>
      </tr>
   {% endfor %}
   </tbody>
</table>
</div>
{% endblock %}
